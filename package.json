{
  "name": "react-helium",
  "version": "2.0.3",
  "description": "A React component library",
  "author": "Alex Disdier",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdisdier/react-helium.git"
  },
  "keywords": [
    "react",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "start": "start-storybook -p 6007",
    "test:unit": "react-scripts test",
    "test:ci": "yarn test:unit t -- --coverage --watchAll=false",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "clean": "rm -rf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --build \"./tsconfig.build.json\"",
    "copy-files": "copyfiles -u 1 src/style/assets/**/*.otf src/**/**/*.css lib/",
    "postbuild": "yarn run copy-files",
    "build:watch": "yarn build -w",
    "prepare-release": "yarn prebuild && yarn build && yarn postbuild"
  },
  "dependencies": {
    "@aaronhayes/react-use-hubspot-form": "^2.1.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "dompurify": "^2.3.4",
    "draft-js": "^0.11.7",
    "draft-js-export-html": "^1.4.1",
    "lodash.uniqueid": "^4.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-jss": "^10.9.0",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@types/draft-js": "^0.11.8",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.17",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "^2.1.1",
    "husky": "^3.0.5",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
